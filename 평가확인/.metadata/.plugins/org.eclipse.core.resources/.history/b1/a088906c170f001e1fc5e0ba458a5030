package 안지혜A1;
import java.util.*;

//회원정보를 다룰 수 있는 기능
public class Handler {
	

	// 회원/판매자 정보를 보관하는 배열
	Member[] arr = new Member[100];

	
	// 회원가입 (생성/추가)
	public int addition(Member tmp) {
		int row = 0;
		
		// 회원가입을 하려고 한다
		for(int i = 0; i < arr.length; i++) {		// 추가할 수 있는 공간이 있는지 확인 한 후
			if(arr[i] != null && arr[i].id.equals(tmp.id)) {	// 공간이  null이지만 나랑 같은 아이디가 있다면
				row = 0;
			}
			else if(arr[i] == null) {				// 공간이 null이라면
				arr[i] = tmp;						// 배열에 추가
				row += 1;
			}
		}
		return row;
	}

	// 전체 목록
	public Member[] MemberAll() {
		return arr;
		
	}

	
	// 단일 검색
	public Member[] idsearch(String id) {
		Member[] mem = null;
		int length = 0;
		
		for(int i = 0; i < arr.length; i++) {
			Member m = arr[i];
			if(m != null && m.id.contains(id)) { // 공간의 null이 아니고 contains(a문자와 b문자가 포함하면)
				length++;						 // 길이 증가
			}
		}
		mem = new Member[length];
		length = 0;
		
		for(int i = 0; i < arr.length; i++) {
			if(arr[i] != null && arr[i].id.contains(id)) {
				mem[length++] = arr[i];			
			}
		}
		
		return mem;
	}

	// 회원 탈퇴(삭제)
	public int delete(String id) {
		int row = 0;
		
		for(int i = 0; i < arr.length; i++) {
			if(arr[i] != null && arr[i].id.equals(id)) {
				arr[i] = null;
				row += 1;
			}
		}
		return row;
	}

	
	
	// 정렬 메뉴(정렬)
	
//	Arrays.sort((arra, arrb) -> (a != null && b != null) ? a.id.compareTo(b.id()) : 0);
	
	
	
	
	
}